    "karma-typescript-preprocessor": "^0.1.2",
    "open": "0.0.5",
    "phantomjs-prebuilt": "^2.1.7",
    "serve-static": "^1.10.0",
    "systemjs-builder": "^0.15.15",
    "ts-loader": "^0.8.2",
    "tslint": "^3.7.4",
    "typescript": "^1.8.10",
