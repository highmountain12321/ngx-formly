{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@ngx-formly/*": [
        "src/*/src/public_api",
        "src/ui/*/src/public_api"
      ],
      "@assets/*": [
        "demo/src/assets/*"
      ]
    }
  },
  "exclude": [
    "demo/src/assets/stackblitz/**/*.ts",
    "src/schematics/src/*/files/**/*",
    "index.ts",
    // "dist/schematics/src/*/files/**/*",
    // Skip all dist files
    "dist/**/*",
    "cypress/**/*",
    "node_modules/**/*"
  ]
}
