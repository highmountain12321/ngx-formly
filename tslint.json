{
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "rules": {
    "one-variable-per-declaration": false,
    "no-angle-bracket-type-assertion": false,
    "no-string-literal": false,
    "no-shadowed-variable": false,
    "variable-name": false,
    "ban-types": false,
    "no-unused-expression": [true, "allow-fast-null-checks"],
    "array-type": false,
    "arrow-parens": false,
    "deprecation": {
      "severity": "warning"
    },
    "component-class-suffix": false,
    "contextual-lifecycle": true,
    "directive-class-suffix": false,
    "directive-selector": [true, "attribute", "formly", "camelCase"],
    "component-selector": [true, "element", "formly", "kebab-case"],
    "import-blacklist": [true, "rxjs/Rx"],
    "interface-name": false,
    "max-classes-per-file": false,
    "max-line-length": false,
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": ["static-field", "instance-field", "static-method", "instance-method"]
      }
    ],
    "no-consecutive-blank-lines": false,
    "no-console": [true, "debug", "info", "time", "timeEnd", "trace"],
    "no-empty": false,
    "no-inferrable-types": [true, "ignore-params"],
    "no-non-null-assertion": false,
    "no-redundant-jsdoc": true,
    "no-switch-case-fall-through": true,
    "no-var-requires": false,
    "object-literal-key-quotes": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [true, "single"],
    "trailing-comma": [true, { "multiline": "always", "singleline": "never" }],
    "no-conflicting-lifecycle": false,
    "no-host-metadata-property": false,
    "no-input-rename": false,
    "no-inputs-metadata-property": true,
    "no-output-native": true,
    "no-output-on-prefix": true,
    "no-output-rename": true,
    "no-outputs-metadata-property": true,
    "template-banana-in-box": true,
    "template-no-negated-async": false,
    "use-lifecycle-interface": true,
    "use-pipe-transform-interface": true
  },
  "rulesDirectory": ["codelyzer"]
}
